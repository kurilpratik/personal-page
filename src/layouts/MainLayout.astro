---
import Navbar from "../components/Navbar.astro";
import MainHead from "./MainHead.astro";

interface Props {
	title: string;
	description?: string;
};

const {
	title,
	description
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<MainHead title={title} description={description}/>
	<body>
		<main class="container">
			<Navbar />
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
