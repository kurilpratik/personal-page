---
import RetroGrid  from '../components/ui/retro-grid';
---
<header id="home">
    <div class="relative h-[100%] w-full rounded-lg">   
        <RetroGrid />
    </div>
    <div class="absolute px-16 py-20">
        <p class="text-xl opacity-70">Hi! I am <span class="font-semibold text-primary">Pratik Kuril</span>, a <span class="font-semibold italic">creative developer</span>...</p>
        <h1 class="text-5xl leading-[3.5rem] mt-6 w-[70%] font-bold">Laying out beautiful frontend, reliable backend and <br> powering software.</h1>
    </div>
    
    
</header>

<style>
    header{
        height: 90vh;
        width: 102%;
        border: 1px solid rgb(202, 202, 202);
        border-radius: 1.85rem;
        position: relative;
        top: 0.75rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        background-image: linear-gradient(#fff, #f5f5f5);
        p{
            color: rgba($color: #000000, $alpha: 0.6);
        }
    }
</style>