---
import NavData from '../data/NavData';
import NavLink from './NavLink.astro';
import Button from './Button.astro';
---
<nav>
    <div class="logo flex justify-center items-center">
        <img src="/src/assets/logo.svg" alt="Logo">
        <h3 class="text- l font-semibold">Pratik Kuril</h3>
    </div>
    <ul> 
        {
            NavData.map((item) => (
                <li> 
                    <NavLink href={item.href} class:list={'font-semibold'}>{item.title}</NavLink>
                </li>
            ))
        }
        <Button class="primary-button">Say Hello!</Button>
    </ul>
</nav>

<style is:global>

    nav{
        width: 80%;
        //border: rgba($color: #000000, $alpha: 0.3) solid 1.5px;
        border-radius: 2rem;
        box-shadow: 0 0 3px rgba($color: #000000, $alpha: 0.5);
        margin-block-start: 1rem;
        padding-block: 0.25rem;
        padding-inline: 0.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0.5rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 100;
        background-color: #fff;
        .logo{
            img{
                border-radius: 50%;
                margin-left: 4px;
            }
            h3{
                padding-left: 0.75rem;
                font-size: 1.25rem;
            }
        }
        ul{
            list-style: none;
            display: flex;
            gap: 1.5rem;
            li{
                display: flex;
                align-items: center;
                a{
                    text-decoration: none;
                    color: #000;
                    opacity: 0.5;
                    &:hover{
                        opacity: 1;
                    }
                }
            }
        }
    }
    .active{
        opacity: 1;
    }
</style>