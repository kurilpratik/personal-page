---
import NavData from '../data/NavData';
import NavLink from './NavLink.astro';
import Button from './Button.astro';
---
<nav class="w-[80%] flex justify-between p-1 bg-white fixed z-50 mt-4 top-2">
    <div class="logo flex items-center" >
        <img src="/src/assets/logo.svg" alt="Logo" class="animate-spin">
        <h3 class="text-lg font-semibold">Pratik Kuril</h3>
    </div>
    <ul> 
        {
            NavData.map((item) => (
                <li> 
                    <NavLink href={item.href} class:list={'font-semibold text-base text-black opacity-50 hover:opacity-100'}>{item.title}</NavLink>
                </li>
            ))
        }
        <Button class="primary-button">Say Hello!</Button>
    </ul>
</nav>

<style is:global>

    nav{
        /* border: rgba($color: #000000, $alpha: 0.3) solid 1.5px; */
        border-radius: 2rem;
        box-shadow: 0 0 3px #bcbcbc;
        left: 50%;
        transform: translateX(-50%);

        .logo{
            img{
                border-radius: 50%;
                margin-left: 4px;
            }
            h3{
                padding-left: 0.75rem;
            }
        }
        ul{
            list-style: none;
            display: flex;
            gap: 1.5rem;
            li{
                display: flex;
                align-items: center;
                a{
                    text-decoration: none;
                }
            }
        }
    }
    .active{
        opacity: 1;
    }
</style>